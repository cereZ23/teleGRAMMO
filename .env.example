# ===========================================
# TeleGRAMMO Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# Application
APP_NAME="TeleGRAMMO"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# ===========================================
# Database (PostgreSQL)
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=telegram_scraper

# Connection URL (update password to match POSTGRES_PASSWORD)
DATABASE_URL=postgresql+asyncpg://postgres:your_secure_password_here@postgres:5432/telegram_scraper

# ===========================================
# Redis (Job Queue)
# ===========================================
REDIS_URL=redis://redis:6379/0

# ===========================================
# Security - IMPORTANT: Change these!
# ===========================================

# JWT Secret Key
# Generate with: openssl rand -hex 32
SECRET_KEY=change-me-generate-with-openssl-rand-hex-32

# Telegram Session Encryption Key (Fernet)
# Generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=change-me-generate-with-fernet-generate-key

# ===========================================
# Scraping Settings
# ===========================================
MAX_CONCURRENT_DOWNLOADS=5
BATCH_SIZE=100
SCRAPE_PROGRESS_INTERVAL=50

# ===========================================
# Media Storage
# ===========================================
MEDIA_STORAGE_PATH=/app/media

# ===========================================
# Frontend (Next.js)
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
